.form-group .checkbox {
    input {
        position: static;
        margin-left: 65px;  
    }
    
    label {
        position: relative;
        top: -13px;
        padding-left: 10px;
    }
}

.thumbnail {
    line-height: 20px;
    margin-bottom: 5px;
    overflow: hidden;
    word-break: normal;
    
    img {
        max-width: 100px;
        max-height: 100px;
    }
}

.gallery-box {
    width: 120px;
    padding: 5px;
    margin: 7px;
    float: left;
    min-height: 100px;
    border: 1px solid #ddd;
    overflow: hidden;
    
    .progress {
        margin-bottom: 0;
    }
    
    .thumbnail {
        height: 100px;
        width: 108px;
    }
    
    .title {
        height: 22px;
        overflow: hidden;
        display: block;
    }
}
