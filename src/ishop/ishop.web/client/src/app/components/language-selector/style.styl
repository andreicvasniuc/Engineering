.language-selector {
  
  &.navbar-top-links {
    li.dropdown {
      margin-right: 2px;
      margin-top: 15px;
      
      a {
        &:hover {
          background: none;
        }
        border: none;
      }
      
      i.fa-caret-down {
        visibility: hidden;
      }
      
      &:hover {
        i.fa-caret-down {
          visibility: visible;
        }
      }
    }
  }

  .dropdown-menu {
    min-width: inherit;
    
    li {
      a {
        padding: 5px 10px;
      }
    }
  }
  
  img {
    height: 20px;
    width: 20px;
  }
}